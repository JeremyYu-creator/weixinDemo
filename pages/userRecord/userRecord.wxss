/* pages/userRecord/userRecord.wxss */
.box{
    padding: 36rpx;
}
.form .title{
    text-align: center;
    font-size: 40rpx;
}
.item{
    margin-top: 30rpx;
    font-size: 30rpx;
}
.report , .form{
    border-radius: 20rpx;
    background: #fff;
    padding: 30rpx;
}
.report_title{
    font-size: 36rpx;
    font-weight: bold;
}
.bodyinfo{
    font-size: 36rpx;
}
.report view{
    margin-bottom: 20rpx;
    position: relative;
}
.report view::after{
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: -10rpx;
    height: 2rpx;
    background: #f5f5f5;
}